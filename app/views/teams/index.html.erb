<div class="row">
  <div class="heading-block">
    <h2>Teams</h2>
  </div>

  <table
    class="table table-striped table-bordered table-hover ui-datatable teams"
    data-paging=false
    data-ordering=false
    data-length-change=false
    data-info=false
    data-searching=false
  >
    <thead>
      <tr>
        <th>Rank</th>
        <th>Team</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each.with_index do |team, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= link_to team.title, league_team_path(@league, team) %></td>
          <td><%= team.total_points %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
