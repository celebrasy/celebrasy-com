<div class="mainnav ">
  <div class="container">

    <a class="mainnav-toggle" data-toggle="collapse" data-target=".mainnav-collapse">
      <span class="sr-only">Toggle navigation</span>
      <i class="fa fa-bars"></i>
    </a>

    <nav class="collapse mainnav-collapse" role="navigation">
      <ul class="mainnav-menu">
        <li class="dropdown is-open">
          <a href="/leagues/<%= @league.id %>" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
            <%= @league.title %>
            <i class="mainnav-caret"></i>
          </a>

          <ul class="dropdown-menu" role="menu">
            <% League.all.each do |league| %>
              <li>
                <a href=<%= league_point_categories_path(league.id) %>>
                  <i class="fa fa-bars dropdown-icon "></i>
                  <%= league.title %>
                </a>
              </li>
            <% end %>
          </ul>
        </li>

        <li>
          <%= link_to "Positions", league_positions_path(@league) %>
        </li>

        <li>
          <%= link_to "Point Categories", league_point_categories_path(@league) %>
        </li>

        <li>
          <% my_team = @league.teams.first  %>
          <%= link_to "My Team", league_team_path(@league, my_team)  %>
        </li>

        <li>
          <%= link_to "Players", league_players_path(@league)  %>
        </li>

        <li>
          <%= link_to "Points", league_point_submissions_path(@league)  %>
        </li>

        <li>
          <%= link_to "Teams", league_teams_path(@league)  %>
        </li>
      </ul>
    </nav>

  </div>
</div>
